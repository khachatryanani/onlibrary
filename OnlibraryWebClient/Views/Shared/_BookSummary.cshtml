@model Book
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1 font-weight-bolder">
        <h3>
            @Model.Title <span class="font-italic">(@Model.Year)</span>
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Rating</small>
            </span>
        </h3>
    </div>
    <hr />
    <div class="card-text p-1">Number of pages: @Model.Pages</div>
    <div class="card-text p-1 font-weight-bold">Author: @Model.AuthorName</div>
    <div class="card-text">
        <span>Translations: </span>
        @foreach (var lang in Model.Translations.Languages)
        {
            <span>@lang.Language </span>}
        }
    </div>
    <form id="@Model.BookId" method="post" asp-action="Index" asp-controller="Purchases" asp-antiforgery="true">
        <input type="hidden" asp-for="@Model.BookId" />

        <span class="card-text p-1">
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Buy Hard Copy
            </button>
        </span>
    </form>
</div>
