<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Onlibrary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" rel="stylesheet">


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Onlibrary</a>
                <partial name="_LoginPartial.cshtml" />
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                </div>
            </div>
        </nav>
    </header>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            <a class="btn btn-block btn-outline-secondary"
               asp-action="Index"
               asp-controller="Library"
               asp-route-category="">
                Browse Library
            </a>
            <a class="btn btn-block btn-outline-secondary"
               asp-action="Index"
               asp-controller="Books"
               asp-route-category="">
                Browse Books
            </a>
            <a class="btn btn-block btn-outline-secondary"
               asp-action="MyOrders"
               asp-controller="Purchases"
               asp-route-category="">
                Browse Orders
            </a>

        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
